<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeFit.Views.ExercisePage"
             Title="Ćwiczenia">
    <Grid RowDefinitions="Auto, *">
        <VerticalStackLayout Grid.Row="0" Padding="10" Spacing="10">
            <Label Text="Nazwa ćwiczenia" FontAttributes="Bold"/>
            <Entry Text="{Binding Name}" Placeholder="Wpisz nazwę"/>

            <Label Text="Opis (opcjonalnie)" FontAttributes="Bold"/>
            <Entry Text="{Binding Description}" Placeholder="Krótki opis"/>

            <Button Text="Zapisz Typ Ćwiczenia" Command="{Binding SaveCommand}"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Exercises}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Description}" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="1" Text="Usuń" BackgroundColor="Red" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                    CommandParameter="{Binding .}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>